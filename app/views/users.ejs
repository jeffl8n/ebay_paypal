<% include header %>
<% include navbar %>
<script src="/js/users.js"></script>

<main ng-app="journalAdmins">
    <div ng-controller="mainController">
        <div class="container">
            <div class="jumbotron text-center">
                <h1>Admins <span class="label label-info">{{ users.length }}</span></h1>
                <br>
                
            </div>

            <!-- FORM TO CREATE QUESTIONS -->
            <div id="question-form" class="row top-form ">
                <div class="col-sm-10 col-sm-offset-1 text-center">
                    <form action="/users"  method="post">
                <div class="input-group">
                        <input ng-model="formData.email" type="text" class="form-control input-lg " name="email"  placeholder="email">
                        <span class="input-group-btn">
                             <button ng-disabled="!formData.email" type="submit" class="btn btn-default btn-lg">Add Admin</button>
                        </span>
                    </div>
       
                </form>
                </div>
            </div>

            <div id="response-list" class="row">
                <div class="col-sm-10 col-sm-offset-1">

                    <ul class="list-group">
                      <li class="list-group-item" ng-repeat="user in users">

                        <div class="clearfix">
                            <div class="btn-group inline pull-right btn-group-sm">
                                <button class="btn btn-default"  ng-click="resetPassword($index, user)">Reset Password 
                                    <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>
                                </button>
                                <button class="btn btn-warning" ng-click="deleteUser($index, response._id)">
                                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                </button>
                            </div>
                            <span class="inline" style='line-height: 32px;' >{{user.email}}</span>
                            
                        </div>
                        
                    </li>
                </ul>
            </div>
        </div>

    </div>

</div>
</main>

<% include footer %>
