<% include header %>
<script src="/js/users.js"></script>
<style>
    html                    { overflow-y:scroll; }
    body                    { padding-top:50px; }
    #question-list              { margin-bottom:30px; }
    #question-form              { margin-bottom:30px; }
</style>

<main ng-app="journalAdmins">

    <!-- SET THE CONTROLLER AND GET ALL QUESTIONS -->
    <div ng-controller="mainController">
        <div class="container">

            <!-- HEADER AND TODO COUNT -->
            <div class="jumbotron text-center">
                <h1>Users <span class="label label-info">{{ users.length }}</span></h1>
            </div>

            <!-- question LIST -->
            <div id="response-list" class="row">
                <div class="col-sm-10 col-sm-offset-1">

                    <!-- LOOP OVER THE QUESTIONS IN $scope.questions -->
                    <ul class="list-group">
                      <li class="list-group-item" ng-repeat="user in users">
                    
                        <div class="clearfix">
                            <div class="btn-group inline pull-right btn-group-sm">
                                <button class="btn btn-default"  ng-click="editUser($index, user)">
                                    <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>
                                </button>
                                <button class="btn btn-warning" ng-click="deleteUser($index, response._id)">
                                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                </button>
                            </div>
                              <span class="inline" style='line-height: 32px;' >{{user.username}} ({{user.email}})</span>
                              </div>
                        
                    </li>
                </ul>
            </div>
        </div>

    </div>

</div>
</main>

<% include footer %>